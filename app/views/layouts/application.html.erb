<!DOCTYPE html>
<html>
  <head>
    <title>Vupload</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user.present? %>
      <a href="<%= destroy_user_session_path %>" data-method="delete" ><i class="fa fa-sign-out"></i> <span>Logout</span></a>
    <% end %> 
    <%= yield %>
  </body>
</html>
